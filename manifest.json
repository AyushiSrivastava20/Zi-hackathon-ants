{
  "manifest_version": 2,

  "name": "Zi-Hackathon Ants",
  "description": "ddsdsd",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["assets/*"],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ]
}
